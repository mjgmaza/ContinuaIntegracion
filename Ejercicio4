def ahora = new Date()
def formato = new SimpleDateFormat("dd/MM/yyyy HH:MI:ss");
def mediodia = new Date().format("dd/MM/yyyy HH:MI:ss", "22/11/2022 12:00:00)
def version
pipeline
{
    agent any
    stages
    {
        stage("mostrar fecha")
        {
            steps
            {                
                script
                {
                    println ahora   
                    println mediodia
                }                
            }
        }
        stage("motrar en Funcion de la hora")
        {         
            steps
            {                
                script
                {
                echo 'Usuario del proceso'
                println 'María Jesús'
                echo 'Id del usuario'
                println 'mjgmaza'
                println 'Verión de java en Función'
                mostrarVersionJava(version)
                }                
            }
        }
    }
}

def mostrarVersionJava(String version)
{
    bat "java -version"
    echo version
}
