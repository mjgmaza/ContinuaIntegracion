def dia = new Date()

def dateFormat = new SimpleDateFormat("HH:mm"); 
def ahora = dateFormat.format(new Date());
 
def version
pipeline
{
    agent any
    stages
    {
        stage("mostrar fecha")
        {
            steps
            {                
                script
                {
                    println dia
                    println ahora
                }                
            }
        }
        stage("motrar en Funcion de la fecha")
        {         
            steps
            {                
                script
                {
                echo 'Usuario del proceso'
                println 'María Jesús'
                echo 'Id del usuario'
                println 'mjgmaza'
                println 'Verión de java en Función'
                mostrarVersionJava(version)
                }                
            }
        }
    }
}

def mostrarVersionJava(String version)
{
    bat "java -version"
    echo version
}
