def dia = new Date()

def df = "dd.MM.yyyy HH:mm:ss,S"
def ahora = new Date().parse(df, "13.07.2017 14:03:51,469000000") 
def version
pipeline
{
    agent any
    stages
    {
        stage("mostrar fecha")
        {
            steps
            {                
                script
                {
                    println dia
                    println ahora
                }                
            }
        }
        stage("motrar en Funcion de la fecha")
        {         
            steps
            {                
                script
                {
                echo 'Usuario del proceso'
                println 'María Jesús'
                echo 'Id del usuario'
                println 'mjgmaza'
                println 'Verión de java en Función'
                mostrarVersionJava(version)
                }                
            }
        }
    }
}

def mostrarVersionJava(String version)
{
    bat "java -version"
    echo version
}
